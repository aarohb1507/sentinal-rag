{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@sentinal-rag/shared": ["packages/shared/src/index.ts"],
      "@sentinal-rag/api": ["packages/api/src/index.ts"],
      "@sentinal-rag/web": ["packages/web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"],
  "files": []
}

